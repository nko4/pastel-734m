@import 'vendor/normalize.css'

@import 'nib'
@import '_variables'

html
  height: 100%
  width: 100%
  box-sizing: border-box

body
  height: 100%
  width: 100%
  background: #111

.arrow
  position: relative
  top: 5px
  opacity: 0.7
  margin: 0 50px

path
  color: white

#trailer
  height: 100%;
  width: 100%
  background: url("/images/zelda2.png") 50% 0;
  background-repeat: no-repeat;
  background-size: 110% 110%;
  opacity: 0.3
  position: absolute
  top: 0
  left: 0
  z-index: -1

#play
  cursor: pointer
  text-decoration: none
  font-size: 70px
  font-weight: bold
  font-family: "source-sans-pro", sans-serif
  border: 5px solid white
  padding: 0 10px
  margin: 0 auto
  text-align: center
  color: white
  width: 200px
  margin-top: 150px
  display: block
  opacity: 0.7
  user-select: none

#name
  font-family: "source-sans-pro", sans-serif
  font-weight: 100

#current
  text-align: center
  font-size: 5em
  font-weight: bold
  font-family: helvetica
  color: white
  margin-top: 150px
  opacity: 0.7

.shift
  &.left
    animation-name: shift-left
    animation-duration: 0.5s
  &.right
    animation-name: shift-right
    animation-duration: 0.5s

@keyframes shift-left
  0%
    left: 0
  50%
    left: -20px
  100%
    left: 0

@keyframes shift-right
  0%
    right: 0
  50%
    right: -20px
  100%
    right: 0
