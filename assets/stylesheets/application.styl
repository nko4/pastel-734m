@import 'vendor/normalize.css'

@import 'nib'
@import '_variables'

html
  height: 100%
  width: 100%
  box-sizing: border-box

body
  height: 100%
  width: 100%
  overflow: hidden
  background: #111

svg
  position: relative
  top: 5px
  opacity: 0.7
  margin: 0 50px

path
  color: white

#trailer
  height: 100%;
  width: 100%
  background: url("/images/zelda2.png") 50% 0;
  background-repeat: no-repeat;
  background-size: 110% 110%;
  opacity: 0.3
  position: absolute
  top: 0
  left: 0

#play
  cursor: pointer
  font-size: 3em
  font-weight: bold
  font-family: helvetica
  border: 10px solid white
  padding: 15px
  margin: 0 auto
  text-align: center
  color: white
  width: 200px
  margin-top: 150px

#current
  text-align: center
  font-size: 5em
  font-weight: bold
  font-family: helvetica
  color: white
  margin-top: 150px
